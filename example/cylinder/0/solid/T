FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 298;

boundaryField
{
    "(\w*_solid)"
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           uniform 298;
        Tnbr            T;
        neighbourFieldName T;
        kappa           solidThermo;
        kappaName       none;
    }
}


